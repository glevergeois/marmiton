{% extends 'base.html.twig' %}

{% block title %}Recipe{% endblock %}

{% block body %}
    <h1>Recipe</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ recipe.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ recipe.name }}</td>
            </tr>
            <tr>
                <th>Texte</th>
                <td>{{ recipe.texte }}</td>
            </tr>
            <tr>
                <th>Duration</th>
                <td>{{ recipe.duration ? recipe.duration|date('H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>For_how_many_persons</th>
                <td>{{ recipe.forHowManyPersons }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ recipe.image }}</td>
            </tr>
            <tr>
                <th>Ingredient</th>
                <td>{{ recipe.ingredient ? recipe.ingredient|json_encode : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_recipe_index') }}">back to list</a>

    <a href="{{ path('app_recipe_edit', {'id': recipe.id}) }}">edit</a>

    {{ include('recipe/_delete_form.html.twig') }}
{% endblock %}
