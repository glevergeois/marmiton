{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<body>
    <section>       
        <div class="unique_recipe">
            {% for recipe in recipes %}
            <img src="/img/{{recipe.image}}" alt="Picture of the recipe">
            <div class="main_infos_recipe">
                <a href="{{ path('app_recipe_show', {id: recipe.id}) }}">{{recipe.name}} </a>
                {# <h4> {{recipe.forHowManyPersons}} </h4>#}
            </div>
                <h4> {{recipe.duration|date('h-m') }} minute</h4> 
                {# <p> {{recipe.texte}} </p> #}
                {# <p> {{recipe.comment}} </p> #}
            {% else %}
            {% endfor %}
        </div>
    </section>
    <section>
        <div class="list_of_ingredients">
            {% for ingredient in ingredients %}
            <div class="main_infos_recipe">
                <a href="{{ path('app_ingredient_show', {id: ingredient.id}) }}">{{ingredient.name}} </a>
            </div>
            {% else %}
            {% endfor %}
        </div>
    </section>
</body>

{% endblock %}
